@{
    ViewData["Title"] = "Register Page";
}

<div class="signin">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Register</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fa-solid fa-facebook-square"></i></span>
                        <span><i class="fa-solid fa-google-plus-square"></i></span>
                        <span><i class="fa-solid fa-twitter-square"></i></span>
                    </div>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("RegisterDB","Login")" method="post"> 
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            </div>
                            <input type="text" name="UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            </div>
                            <input type="email" name="Email" class="form-control" placeholder="Email Address">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                            </div>
                            <input type="password" name="Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                            </div>
                            <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox" for="RememberMe"> 
                            <label for="RememberMe">Remember Me</label> 
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn float-right login_btn">Create Account</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Have an account? <a href="#">Log In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
